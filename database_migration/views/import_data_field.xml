<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="import_data_fields_form" model="ir.ui.view">
        <field name="name">import.data.fields.view.form</field>
        <field name="model">import.data.fields</field>
        <field name="arch" type="xml">
            <form string="import_data_field_form">
                <sheet>
                    <group>
                        <group string="Basic">
                            <field name="name"
                                   attrs="{
                                   'readonly': [('field_id','!=',False)],
                                   }"/>
                            <field name="label"
                                   attrs="{
                                   'readonly': [('field_id','!=',False)],
                                   }"/>
                            <field name="type"/>
                            <field name="date_format"
                                   attrs="{
                                   'invisible': [('type','!=','date')],
                                   'required': [('type','=','date')],
                                   }"/>
                            <field name="rel_model"
                                   attrs="{
                                   'invisible': [('type','not in',['many2one','many2many', 'selection'])],
                                   'required': [('type','in',['many2one','many2many','selection'])],
                                   }"/>
                            <field name="rel_field"
                                   domain="[('model_id','=', rel_model)]"
                                   attrs="{
                                   'invisible': [('rel_model','=',False)],
                                   'required': [('rel_model','!=',False)],
                                   }"/>
                            <field name="selection_options" readonly="1"
                                   attrs="{
                                   'invisible': [('type','!=','selection')],
                                   'required': [('type','=','selection')],
                                   }"
                            />
                        </group>
                        <group string="Attributes">
                            <field name="required"/>
                        </group>
                        <group string="Technical">
                            <field name="model_name"/>
                            <field name="field_id"/>
                            <field name="field_name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>